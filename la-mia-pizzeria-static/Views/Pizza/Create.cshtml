@model Pizza
@{
    Layout = "LayoutCustom";

    var pizze = Model;

}

<div class="container">
    <h1 class="text-center text-light">Inserisci la tua nuova Paolo-Pizza</h1>

    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group p-2">
            <label asp-for="Name" class="control-label text-light">Nome</label>
            <input asp-for="Name" class="form-control " />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="Description" class="control-label text-light">Descrizione</label>
            <textarea asp-for="Description" class="form-control "></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="ImgUrl" class="control-label text-light">Scegli l'immagine</label>
            <input asp-for="ImgUrl" type="file" class="form-control-file " />
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <input type="submit" value="Create" class="btn btn-danger btn-lg p-2 m-2" />
        </div>
    </form>

</div>


